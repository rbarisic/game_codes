<div class="pure-menu pure-menu-open pure-menu-horizontal">
    <%= link_to 'Game Codes', root_path, class: 'pure-menu-heading' %>

    <ul>
        <li class="<%= active!(root_path) %>">
        <%= link_to 'Home', root_path %>
        </li>

        <li class="<%= active!('users_path') %>">
        <%= fa_icon 'games' %><%= link_to 'Games', games_path %>
        </li>

        <li class="<%= active!('') %>"><%= fa_icon 'users' %>
        <%= link_to 'Users', users_path %>
        </li>

        <% if user_signed_in? %>

    		<li class="<%= active!('user_path(current_user') %>">
                <%= link_to 'logged in as : ' + current_user.nickname, user_path(current_user) %>
            </li>
            
    		<li class="<%= active!(destroy_user_session_path) %>">
                <%= link_to 'logout', destroy_user_session_path, method: :delete %>
            </li>

            <% else %>

            <li class="<%= active!(new_user_session_path) %>">
                <%= link_to 'Sign in', new_user_session_path %>
            </li>

            <li class="<%= active!(new_user_registration_path) %>">
                <%= link_to 'Register', new_user_registration_path %>
            </li>

        <% end %>
    </ul>
</div>

