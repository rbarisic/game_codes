<h1>New Game Code</h1>
<% if @gamecode.errors.any? %>
	<ul>
	<% @gamecode.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>


<%= form_for @gamecode, url: game_codes_path, html: {class: 'pure-form pure-form-stacked'}  do |f| %>
	<fieldset>
		<legend>Code Form</legend>

		<div class="pure-g">
			<div class="pure-u-1 pure-u-md-1-3">
				<%= f.label :code %>
				<%= f.text_field :code, placeholder: 'Enter code here' %>
			</div>
			<div class="pure-u-1 pure-u-md-1-3">
				<%= f.label :game_id %>
				<%= f.collection_select(:game_id, Game.all, :id, :name) %>
			</div>
		</div>
		<%= f.submit 'Add Code', class: 'pure-button pure-button-primary' %>
	</fieldset>
<% end %>