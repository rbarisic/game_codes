<div class="pure-layout pure-layout-960">
	<div class="pure-g">	
		<div class="pure-u-1 pure-u-md-1-2">
			<div class="l-box l-box-window">
				Newest Games
				<hr>
				<table class="pure-table-striped">
					<tr>
						<th align="left">
							Game
						</th>
						<th align="right">
							Date Added
						</th>
					</tr>
					<% Game.last(5).each do |game| %>
						<tr>
							<td align="left"><%= link_to game.name, game %></td>
							<td align="right"><%= time_ago_in_words(game.created_at) %></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<div class="l-box l-box-window">
				Our Sponsor
				<hr>
			</div>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<div class="l-box l-box-window">
				Top 5 Contributors
				<hr>
				<ul>
				<% User.last(5).each do |user| %>
					<li><%= link_to user.nickname || user.email, user %></li>
				<% end %>
				</ul>
			</div>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<div class="l-box l-box-window">
				Our Sponsor
				<hr>
			</div>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<div class="l-box l-box-window">
				Get Help
				<hr>
			</div>
		</div>
	</div>
</div>