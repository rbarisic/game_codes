<div class="pure-layout pure-layout-960">
	<div class="pure-g">

		<div class="pure-u-1">
			<div class="window distanced round">
				<div class="content">
					<h1 class="text-center">Add your Code</h1>

					<p class="text-center">Add your code to our Site and get new Allies instantly!</p>
					<%= render 'game_codes/add_code_form' %>
				</div>
			</div>
		</div>

		<div class="pure-u-1">
			<%= render 'widgets/hot_games' %>
		</div>
		
		<div class="pure-u-1 pure-u-md-1-2">
			<%= render 'widgets/newest_games' %>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<%= render 'widgets/newest_users' %>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<%= render 'widgets/top_users' %>
		</div>

		<div class="pure-u-1 pure-u-md-1-2">
			<div class="window distanced round">
				<div class="heading">Get Help</div>
				<div class="content">

				</div>
			</div>
		</div>
		
	</div>
</div>