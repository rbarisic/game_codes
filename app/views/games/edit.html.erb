<div class="responsive-form responsive-form-full">

<h1 class="text-center">Edit Game</h1>

	<div class="errors">
		<% if @game.errors.any? %>
			<ul>
			<% @game.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
			</ul>
		<% end %>
	</div>

	<%= form_for @game, html: { class: 'pure-form pure-form-stacked'} do |f| %>
		<div class="pure-g">
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="l-box">
					<%= f.label :name %>
					<%= f.text_field :name, class: 'pure-input-1' %>
					<%= f.label :creator %>
					<%= f.text_field :creator, class: 'pure-input-1' %>
					<%= f.label :company_url %>
					<%= f.text_field :company_url, class: 'pure-input-1' %>
					<%= f.label :code_length %>
					<%= f.number_field :code_length, class: 'pure-input-1' %>
					<%= f.label :description %>
					<%= f.text_area :description, class: 'pure-input-1', style: 'height:12em;' %>
				</div>
			</div>
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="l-box">
					<% if @game.cover %>
						<%= render_b64(@game.cover, @game.cover_content_type) %>
					<% else %>
						<legend>Please Upload a Cover for this game.</legend>
					<% end %>
					<%= f.file_field :cover %>
					<% if @game.company_image %>
						<%= render_b64(@game.company_image, @game.company_image_content_type) %>
					<% else %>
						<legend>Please Upload a Banner for this game's Publisher</legend>
					<% end %>
					<%= f.file_field :company_image %>					
				</div>
			</div>
		</div>

		<div style="height: 3em"></div>

		<div class="actions">
			<%= link_to "Back", :back, class: 'pure-button' %>
			<%= f.submit class: 'pure-button pure-button-primary', style: 'float: right;'%>
		</div>
	<% end %>
</div>