<div class="window-toolbar">
	<div class="non-mobile text right">
	<%= render 'shared/gallery_selector' unless @view == 'listview' %>
	<legend>View</legend>
	<%= link_to '<i class="fa fa-th fa-fw"></i>'.html_safe, games_path(view: 'gallery'), class: tb_active!(games_path(view: 'gallery')) %>

	<%= link_to '<i class="fa fa-list fa-fw"></i>'.html_safe, games_path(view: 'listview'), class: tb_active!(games_path(view: 'listview')) %>
	
	</div>
</div>

<% case(@view) %>
	<% when 'gallery', nil %>
		<%= render 'index_gallery' %>
	<% when 'listview' %>
		<%= render 'index_listview' %>
<% end %>

<div class="pagination-container center">
	<%= will_paginate %>
</div>